- var instanceTypes = ["t2.nano", "t2.micro", "t2.small", "t2.medium", "t2.large"];

.modal-dialog
  .modal-content
      .modal-header
        button.close(data-dismiss="modal", aria-hidden="true", type="button") &times;
        h4.modal-title
            | Launch a Cluster
        .modal-body
          form.create-cluster-form
            .form-group
              label.control-label(for="m-cluster-name") Cluster Name
              input.input-sm#m-cluster-name.form-control(type="text", placeholder="Cluster name")
            .form-group
              label.control-label(for="m-cluster-user") Cluster User
              input.input-sm#m-cluster-user.form-control(type="text", placeholder="Cluster user")
            .form-group
              label.control-label(for="m-cluster-instance-type") Instance Type
              select.input-sm#m-cluster-instance-type.form-control
                each instanceType in instanceTypes
                  option(value=instanceType)= instanceType
            .form-group
              label.control-label(for="m-cluster-instance-count") Instance Count
              input.input-sm#m-cluster-instance-count.form-control(type="text", placeholder="1", value="1")
            .form-group
              label.control-label(for="m-cluster-ami") AMI
              input.input-sm#m-cluster-ami.form-control(type="text", placeholder="ami-id")
            .form-group
              label.control-label(for="m-cluster-creation-playbook") Playbook
              select.input-sm#m-cluster-creation-playbook.form-control
                option(value='ec2') Default
            .g-validation-failed-message

            i.icon-plus#m-add-cluster-add-field Add advanced field
      .modal-footer
        a.btn.btn-small.btn-default(data-dismiss="modal") Cancel
        a.m-cluster-launch-button.btn.btn-small.btn-primary
              i.icon-plus-squared
              | Launch Cluster
